<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/top_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/colorred"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorwhite"
                    android:background="@drawable/leftarrow"
                    android:id="@+id/toolbar_image"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Toolbar Title"
                    android:layout_gravity="left"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorwhite"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:textStyle="bold"
                    android:id="@+id/toolbar_title" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/toolbar_save"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="SAVE"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/colorwhite"
                        android:textStyle="normal"

                        android:layout_alignParentRight="true"></TextView>
                </LinearLayout>
                />
            </LinearLayout>


        </android.support.v7.widget.Toolbar>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame_workers"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/toolbar">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_5sdp"

                >



                <LinearLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/colorwhite">


                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/splash_icon"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"/>

                    <LinearLayout
                        android:id="@+id/add_a"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:orientation="vertical">
                    <TextView
                        android:id="@+id/wrkordertitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorblack"
                        android:textStyle="bold"
                        android:text="Current Plan: Upkeep Free"
                        android:textSize="@dimen/_14sdp"
                        android:backgroundTint="@android:color/transparent"
                        android:layout_marginLeft="@dimen/_15sdp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:text="Learn more about upgrade options"
                            android:layout_marginLeft="@dimen/_15sdp"/>

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/layout1"
                    android:background="@color/colorwhite">

                    <LinearLayout
                        android:id="@+id/assign_workers"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/add_b"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/unnamed"
                            />
                        <TextView
                            android:id="@+id/assignworker"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorblack"
                            android:textStyle="bold"
                            android:text="rincyrinu41@gmail.com"
                            android:textSize="@dimen/_12sdp"
                            android:gravity="left|center"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/layout1"
                    android:gravity="center"
                    android:background="@color/colorwhite">

                    <LinearLayout
                        android:id="@+id/layoutduedate"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/splash_icon"
                            android:layout_marginRight="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/duedate"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorgrey"
                            android:textStyle="normal"
                            android:text="Files"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            />
                        <Button
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:text="UPGRADE"
                            android:textColor="@color/colorblack"
                            android:textStyle="bold"
                            android:gravity="right|center"
                            android:textSize="@dimen/_10sdp"
                            android:background="@drawable/button_style2"
                            android:drawableLeft="@drawable/upgrades"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableTint="@color/colorred"
                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@id/layout1"
                    android:gravity="center"
                    android:background="@color/colorwhite">

                    <LinearLayout
                        android:id="@+id/layoutabt"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/splash_icon"
                            android:layout_marginRight="@dimen/_15sdp"/>

                        <TextView
                            android:id="@+id/abts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorblack"
                            android:textStyle="bold"
                            android:text="About UpKeep"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_10sdp"

                            />

                    </LinearLayout>
                </LinearLayout>















            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>


